package chapter1.practice;

import java.util.Scanner;

public class Practice3 {

	public static void main(String[] args) {

		// 문자열 자르기
		// 사용자로부터 시작인덱스와 종료인덱스를 입력받고
		// 입력받은 시작 인덱스와 종료 인덱스까지 문자열을 잘라서 
		// 자른 문자배열을 출력
		
		// string 기능 substring을 사용하지 않고 char[]을 이용해서 작성
		Scanner scanner = new Scanner(System.in);
		
		
		String statment = "내가 그린 기린 그림은 잘 그린 기린 그림이고 네가 그린 기린 그림은 잘 못그린 기린 그림이다.";
		
		System.out.println("시작인덱스 : ");
		String firstindex = statment;
		firstindex = scanner.nextLine();
		
		System.out.println("종료인덱스 : ");
		String secondindex = statment;
		secondindex = scanner.nextLine();
		
		char[] statments1 = new char[firstindex.length()];
		for (int index = 0; index < firstindex.indexOf(6); index++) {
			statments1[index] = firstindex.charAt(index);
		}
		
		char[] statments2 = new char[secondindex.length()];
		for (int index = 0; index < secondindex.lastIndexOf(8); index++) {
			
			statments2[index] = secondindex.charAt(index);
		}

		char[] resultChars = new char[statments1.length + statments2.length];
		for (int index = 0; index < statments1.length; index++) {
			
			resultChars[index] = statments1[index];
		}

		for (int index = 0; index < statments2.length; index++) {
			
			resultChars[index] = statments2[index];
		}
		
		
		System.out.println(resultChars);
		
		
	}

}
